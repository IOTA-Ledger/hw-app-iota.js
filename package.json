{
  "name": "hw-app-iota",
  "version": "0.6.2-beta.0",
  "description": "Ledger Hardware Wallet IOTA Application API",
  "keywords": [
    "Ledger",
    "LedgerWallet",
    "IOTA",
    "NanoS",
    "Hardware",
    "Wallet"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IOTA-Ledger/hw-app-iota.js.git"
  },
  "source": "src/iota.js",
  "main": "dist/iota.js",
  "module": "dist/iota.mjs",
  "files": [
    "/dist",
    "/src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "microbundle --target node --format es,cjs",
    "dev": "microbundle watch",
    "format": "prettier --single-quote --write src/**/*.js test/**/*.js",
    "lint": "eslint src",
    "pretest": "npm run build",
    "test": "mocha",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "bip32-path": "^0.4.2",
    "iota.lib.js": "^0.5.2",
    "semver": "^6.3.0",
    "struct": "0.0.12"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.6.0",
    "@iota/checksum": "^1.0.0-beta.21",
    "@iota/core": "^1.0.0-beta.21",
    "@ledgerhq/hw-transport-mocker": "^4.73.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.6.0",
    "microbundle": "^0.11.0",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0"
  }
}
