{
  "name": "hw-app-iota",
  "version": "0.6.2",
  "description": "Ledger Hardware Wallet IOTA Application API",
  "keywords": [
    "Ledger",
    "LedgerWallet",
    "IOTA",
    "NanoS",
    "Hardware",
    "Wallet"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IOTA-Ledger/hw-app-iota.js.git"
  },
  "source": "src/iota.js",
  "main": "dist/iota.js",
  "module": "dist/iota.m.js",
  "esmodule": "dist/iota.modern.js",
  "files": [
    "/dist",
    "/src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "microbundle --format modern,es,cjs",
    "dev": "microbundle watch",
    "format": "prettier --single-quote --write src/**/*.js test/**/*.js",
    "lint": "eslint src",
    "pretest": "npm run build",
    "test": "mocha",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bip32-path": "^0.4.2",
    "iota.lib.js": "^0.5.3",
    "semver": "^7.3.5",
    "struct": "0.0.12"
  },
  "devDependencies": {
    "@iota/checksum": "^1.0.0-beta.30",
    "@iota/core": "^1.0.0-beta.30",
    "@ledgerhq/hw-transport-mocker": "^5.51.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.28.0",
    "microbundle": "^0.13.3",
    "mocha": "^9.0.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2"
  }
}
